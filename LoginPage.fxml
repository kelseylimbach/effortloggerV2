<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginViewController" style="-fx-background-color: #F5F5F5; -fx-font-family: Times New Roman">
    <children>
        <Label fx:id="welcomeLabel" layoutX="155.0" layoutY="50.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to EffortLogger V2" />
		<Label fx:id="usernameLabel" layoutX="140.0" layoutY="125.0" style="-fx-font-size: 18px; -fx-font-family: 'Helvetica'; -fx-text-fill: black;" text="Username" />
        <TextField fx:id ="usernameField" layoutX="240.0" layoutY="125.0" prefWidth="200.0" />
        <Label fx:id="passwordLabel" layoutX="140.0" layoutY="175.0" style="-fx-font-size: 18px; -fx-font-family: 'Helvetica'; -fx-text-fill: black;" text="Password" />
        <PasswordField fx:id="passwordField" layoutX="240.0" layoutY="175.0" prefWidth="200.0" />
        <Button fx:id="login" layoutX="290.0" layoutY="230.0" prefWidth="100.0" text="Login" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;" onAction="#submitLogin" />
        <Label fx:id="requirementsLabel" layoutX="135.0" layoutY="300.0" style="-fx-font-size: 12px; -fx-text-fill: red;" text="Password must be at least 8 characters and contain at least 1 capital letter" />
        <Label fx:id="errorMessage" layoutX="220.0" layoutY="350.0" style="-fx-font-size: 12px; -fx-text-fill: red;" />
    </children>
</AnchorPane>
